---
  root: true
  env:
    browser: true
    es6: true
    node: true
  extends:
    - eslint:recommended
    - airbnb
    - prettier
  parser: babel-eslint
  plugins:
    - babel
    - import
    - jsx-a11y
    - react
    - prettier
  rules:
    prettier/prettier: error
    react/jsx-one-expression-per-line: off
    jsx-a11y/anchor-is-valid:
      - error
      - aspects:
         - invalidHref
         - preferButton
        components:
          - Link
        specialLink:
          - hrefLeft
          - hrefRight
